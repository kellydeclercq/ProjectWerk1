<Window x:Class="ProjectBeheerWPF_UI.GebruikerUI.OverzichtEigenProjecten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectBeheerWPF_UI.GebruikerUI"
        mc:Ignorable="d"
        Title="OverzichtEigenProjecten" Height="1000" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="2" Grid.Row="0" Margin="5" VerticalAlignment="Center" FontSize="20" Text="Overzicht projecten"/>
        <ComboBox Grid.Column="1" Grid.Row="1" Margin="5" Name="FilterCombobox">
            <!--using tags to use in code-behind to decide what filters to apply-->
            <!--default option combobox-->
            <ComboBoxItem Content="Filter:" Tag="None" IsSelected="True"/>
            <ComboBoxItem Content="Datum" Tag="Datum"/>
            <ComboBoxItem Content="ProjectNaam" Tag="Projectnaam"/>
            <ComboBoxItem Content="Wijk" Tag="Wijk"/>
            <ComboBoxItem Content="Status" Tag="Status"/>
        </ComboBox>

        <!--if i want to filter on date => show the datepickers to slect start and end date-->
        <!--set visibility on collapse-->
        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" Margin="5" Visibility="Visible">
            <TextBlock Text="Startdatum" Margin="5"/>
            <DatePicker Name="StartDatePicker" Width="120"/>
            <TextBlock Text="Einddatum" Margin="5"/>
            <DatePicker Name="EndDatePicker" Width="120"/>
        </StackPanel>

        <ComboBox Grid.Column="3" Grid.Row="1" Margin="5" Name="SortComboBox">
            <!--using tags to use in code-behind to decide what filters to apply-->
            <!--default option combobox-->
            <ComboBoxItem Content="Sorteer:" Tag="None" IsSelected="True"/>
            <ComboBoxItem Content="Van oud naar nieuw" Tag="DatumOudnaarNieuw"/>
            <ComboBoxItem Content="Van nieuw naar oud" Tag="DatumNieuwnaarOud"/>
            <ComboBoxItem Content="Wijk" Tag="Wijk"/>
            <ComboBoxItem Content="Status" Tag="Status"/>
            <ComboBoxItem Content="Type project" Tag="TypeProject"/>
        </ComboBox>

        <DataGrid Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="3" Margin="5" Name="ProjectOverzichtDatagrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" />
                <DataGridTextColumn Header="Status"/>
                <DataGridTextColumn Header="Startdatum"/>
                <DataGridTextColumn Header="Titel"/>
                <DataGridTextColumn Header="Type"/>
                <DataGridTextColumn Header="Wijk"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!--uniformgrid makes a grid where each child has the same amount of space-->
        <!--<UniformGrid Grid.Column="1" Grid.Row="3" Columns="3" Grid.ColumnSpan="3" Margin="5" HorizontalAlignment="Stretch">
            <Button Name="BekijkProjectButton" Content="Bekijk geselecteerd project" Margin="5"></Button>
            <Button Name="BewerkProjectButton" Content="Bewerk geselecteerd project" Margin="5"></Button>
            <Button Name="ExporteerProjectButton" Content="Exporteer geselecteerd project" Margin="5"></Button>
        </UniformGrid>-->

        <StackPanel Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="50" Width="150" Name="DetailsProjectButton" Content="Bekijk geselecteerd project" Margin="5"  Click="Details_Click"></Button>
            <Button Height="50" Width="150" Name="BewerkProjectButton" Content="Bewerk geselecteerd project" Margin="5"  Click="Bewerk_Click"></Button>
            <Button Height="50" Width="150"  Margin="5" Name="ExporteerAlsCSV" Content="Exporteer als CSV" Click="ExporteerAlsCsv_Click"/>
            <Button Height="50" Width="150"  Margin="5" Name="ExporteerAlsPDF" Content="Exporteer als PDF" Click="ExporteerAlsPdf_Click"/>
        </StackPanel>


    </Grid>
</Window>
