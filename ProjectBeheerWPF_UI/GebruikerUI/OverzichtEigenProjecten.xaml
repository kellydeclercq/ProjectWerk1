<Window x:Class="ProjectBeheerWPF_UI.GebruikerUI.OverzichtEigenProjecten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectBeheerWPF_UI.GebruikerUI"
        mc:Ignorable="d"
        Title="OverzichtEigenProjecten" Height="1000" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="2" Grid.Row="0" Margin="5" VerticalAlignment="Center" FontSize="20" Text="Overzicht projecten"/>
        <ComboBox Grid.Column="1" Grid.Row="1" Margin="5" Name="FilterCombobox" SelectionChanged="FilterCombobox_SelectionChanged">
            <!--using tags to use in code-behind to decide what filters to apply-->
            <!--default option combobox-->
            <!--IsSelected="True"-->
            <ComboBoxItem Content="Filteren op:" Tag="None"/>
            <ComboBoxItem Content="Titel" Tag="Titel"/>
            <ComboBoxItem Content="Type" Tag="Type"/>
            <ComboBoxItem Content="Wijk" Tag="Wijk"/>
            <ComboBoxItem Content="Status" Tag="Status"/>d
            <ComboBoxItem Content="Datum" Tag="Datum"/>
            <ComboBoxItem Content="Partners" Tag="Partners"/>
        </ComboBox>

        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="TitelTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="TypeTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="WijkTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="StatusTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="PartnersTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <!--if i want to filter on date => show the datepickers to slect start and end date-->
        <!--set visibility on collapse-->
        <StackPanel x:Name="DatumsFilterPanel" Grid.Column="2" Grid.Row="1" Orientation="Horizontal" Margin="5" Visibility="Collapsed">
            <TextBlock Margin="5" Text="Startdatum" />
            <DatePicker Margin="5" Name="StartDatePicker" Width="120" SelectedDateChanged="Datepicker_SelectedDateChanged"/>
            <TextBlock Margin="5" Text="Einddatum"/>
            <DatePicker Margin="5" Name="EndDatePicker" Width="120" SelectedDateChanged="Datepicker_SelectedDateChanged"/>
            <!--<Button Margin="5" Width="100" Name="FilterButton" Content="Filter" Click="Filter_Click"/>-->
        </StackPanel>
        
        

        <ComboBox Grid.Column="3" Grid.Row="1" Margin="5" Name="SortComboBox">
            <!--using tags to use in code-behind to decide what filters to apply-->
            <!--default option combobox-->
            <ComboBoxItem Content="Sorteren op:" Tag="None" IsSelected="True"/>
            <ComboBoxItem Content="Titel" Tag="Titel"/>
            <ComboBoxItem Content="Type" Tag="Type"/>
            <ComboBoxItem Content="Wijk" Tag="Wijk"/>
            <ComboBoxItem Content="Status" Tag="Status"/>
            <ComboBoxItem Content="Datum" Tag="Datum"/>
            <ComboBoxItem Content="Partners" Tag="Partners"/>
            <!--<ComboBoxItem Content="Type project" Tag="TypeProject"/>-->
        </ComboBox>

        <DataGrid Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="3" Margin="5" Name="ProjectOverzichtDatagrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding ProjectTitel}"/>
                <DataGridTextColumn Header="Type"/>
                <DataGridTextColumn Header="Wijk" Binding="{Binding Wijk}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding ProjectStatus}"/>
                <DataGridTextColumn Header="Startdatum" Binding="{Binding StartDatum}"/>
                <DataGridTextColumn Header="Partners" Binding="{Binding Partners}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--uniformgrid makes a grid where each child has the same amount of space-->
        <!--<UniformGrid Grid.Column="1" Grid.Row="3" Columns="3" Grid.ColumnSpan="3" Margin="5" HorizontalAlignment="Stretch">
            <Button Name="BekijkProjectButton" Content="Bekijk geselecteerd project" Margin="5"></Button>
            <Button Name="BewerkProjectButton" Content="Bewerk geselecteerd project" Margin="5"></Button>
            <Button Name="ExporteerProjectButton" Content="Exporteer geselecteerd project" Margin="5"></Button>
        </UniformGrid>-->

        <StackPanel Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="50" Width="150" Name="DetailsProjectButton" Content="Bekijk geselecteerd project" Margin="5"  Click="Details_Click"></Button>
            <Button Height="50" Width="150" Name="BewerkProjectButton" Content="Bewerk geselecteerd project" Margin="5"  Click="Bewerk_Click"></Button>
            <Button Height="50" Width="150"  Margin="5" Name="ExporteerAlsCSV" Content="Exporteer als CSV" Click="ExporteerAlsCsv_Click"/>
            <Button Height="50" Width="150"  Margin="5" Name="ExporteerAlsPDF" Content="Exporteer als PDF" Click="ExporteerAlsPdf_Click"/>
        </StackPanel>


    </Grid>
</Window>
