<Window x:Class="ProjectBeheerWPF_UI.HomeProjectBeheer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectBeheerWPF_UI"
        mc:Ignorable="d"
        Title="HomeProjectBeheer" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="0" Margin="5" FontSize="20">Home - Stad Gent Projectbeheer</TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="1" Margin="5" Name="GebruikersNaamTextBlock"/>
        <Button Grid.Column="1" Grid.Row="2" Margin="5" Name="MaakNieuwProjectButton" Content="Maak nieuw project" Click="MaakNieuwProjectButton_Click"/>
        <Button Grid.Column="1" Grid.Row="3" Margin="5" Name="OverzichtJouwProjectenButton" Content="Bekijk jouw projecten"/>
    </Grid>
</Window>
