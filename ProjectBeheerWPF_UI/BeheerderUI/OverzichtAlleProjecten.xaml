            <Button Width="150" Name="DetailsProjectButton" Content="Details project" Margin="5" Click="Details_Click"></Button>
            <Button Width="150" Name="BewerkProjectButton" Content="Bewerk project" Margin="5" Click="Bewerk_Click"></Button>
            <Button Width="150"  Margin="5" Name="ExporteerAlsCSV" Content="Exporteer als CSV" Click="ExporteerAlsCsv_Click"/>
            <Button Width="150"  Margin="5" Name="ExporteerAlsPDF" Content="Exporteer als PDF" Click="ExporteerAlsPdf_Click"/>
        </StackPanel>
    </Grid>
    
    
