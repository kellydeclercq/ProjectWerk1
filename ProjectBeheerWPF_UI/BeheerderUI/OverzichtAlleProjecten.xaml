<Window x:Class="ProjectBeheerWPF_UI.BeheerderUI.OverzichtAlleProjecten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectBeheerWPF_UI.BeheerderUI"
        mc:Ignorable="d"
        Title="OverzichtAlleProjecten" Height="1000" Width="1500">
  

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="0" Margin="5" VerticalAlignment="Center" FontSize="20" Text="Overzicht alle projecten"/>

        <TextBlock Grid.Column="0" Grid.Row="1" Margin="5" VerticalAlignment="Center" FontSize="20" Text="Filters" TextDecorations="Underline"/>
        <StackPanel Grid.Column="0" Grid.Row="2" Margin="5">
               
            <TextBlock Text="Projectnaam" ></TextBlock>
            <TextBox  x:Name="Projectnaam"/>
            
            <TextBlock Text="Wijk" ></TextBlock>
            <TextBox  x:Name="Wijk"/>
            
            <TextBlock Text="Status" ></TextBlock>
            <ComboBox x:Name="Status"></ComboBox>
            
            <TextBlock Text="Eigenaar" ></TextBlock>
            <TextBox  x:Name="Eigenaar"/>

            <TextBlock Text="Type" ></TextBlock>
            <StackPanel Margin="2">
                <CheckBox Content="Stadsontwikkeling" x:Name="stadsontwikkeling" ></CheckBox>
                <CheckBox Content="Groene ruimte" x:Name="groeneRuimte" ></CheckBox>
                <CheckBox Content="Innovatief wonen" x:Name="innovatiefWonen"></CheckBox>
            </StackPanel>

            <TextBlock Margin="0 10 0 0"  Text="Datum" ></TextBlock>
            <TextBlock Text="Van" VerticalAlignment="Center" />
            <DatePicker Margin="2" Name="StartDatePicker" Width="120" />
            <TextBlock Text="Tot" VerticalAlignment="Center"/>
            <DatePicker Margin="2" Name="EndDatePicker" Width="120" />

            <Button Margin="1" Content="Filter" Click="Button_clickFilter"></Button>
        </StackPanel>

        <!--FILTER-->
        <!--if i want to filter on date => show the datepickers to select start and end date-->
        <!--set visibility on collapse-->
       
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="TitelTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="TypeTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="WijkTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="StatusTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="PartnersTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        

        <DataGrid Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Margin="5" Name="ProjectOverzichtDatagrid" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <!--Binding="Binding PropertyName" => tells wpf which property of project to display in each column-->
                <DataGridTextColumn Header="Status" Binding="{Binding ProjectStatus}"/>
                <DataGridTextColumn Header="Startdatum" Binding="{Binding StartDatum}"/>
                <DataGridTextColumn Header="Titel" Binding="{Binding ProjectTitel}"/>
                <!--<DataGridTextColumn Header="Type" Binding="Binding Id"/> voorlopig geven we het type niet weer-->
                <DataGridTextColumn Header="Wijk" Binding="{Binding Wijk}"/>
                <DataGridTextColumn Header="Eigenaar" Binding="{Binding ProjectEigenaar}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--uniformgrid makes a grid where each child has the same amount of space-->
