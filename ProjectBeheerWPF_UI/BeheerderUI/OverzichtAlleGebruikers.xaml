<Window x:Class="ProjectBeheerWPF_UI.BeheerderUI.OverzichtAlleGebruikers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectBeheerWPF_UI.BeheerderUI"
        mc:Ignorable="d"
        Title="OverzichtAlleGebruikers" Height="1000" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="2" Grid.Row="0" Margin="5" VerticalAlignment="Center" FontSize="20" Text="Overzicht gebruikers"/>
        <ComboBox Grid.Column="1" Grid.Row="1" Margin="5" Name="FilterCombobox">
            <!--using tags to use in code-behind to decide what filters to apply-->
            <!--default option combobox-->
            <ComboBoxItem Content="Filter:" Tag="None" IsSelected="True"/>
            <ComboBoxItem Content="Naam" Tag="Naam"/>
            <ComboBoxItem Content="Email" Tag="Email"/>
            <ComboBoxItem Content="Rol" Tag="Rol"/>
        </ComboBox>

        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="NaamTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="EmailTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Width="200"  Name="RolTextBox" HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>

        <ComboBox Grid.Column="3" Grid.Row="1" Margin="5" Name="SortComboBox">
            <!--using tags to use in code-behind to decide what filters to apply-->
            <!--default option combobox-->
            <ComboBoxItem Content="Filter:" Tag="None" IsSelected="True"/>
            <ComboBoxItem Content="Naam" Tag="Naam"/>
            <ComboBoxItem Content="Email" Tag="Email"/>
            <ComboBoxItem Content="Rol" Tag="Rol"/>
        </ComboBox>

        <DataGrid Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Margin="5" Name="GebruikerOverzichtDatagrid">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam" />
                <DataGridTextColumn Header="Admin/Email"/>
                <DataGridTextColumn Header="Rol"/>
            </DataGrid.Columns>

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Details" Click="Details_Click"/>
                    <MenuItem Header="Bewerk"  Click="Bewerk_Click"/>
                    <MenuItem Header="Verwijder"  Click="Verwijder_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        
        
    </Grid>
</Window>
