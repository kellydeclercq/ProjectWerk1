<Window x:Class="ProjectBeheerWPF_UI.NieuwProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectBeheerWPF_UI"
        mc:Ignorable="d"
        Title="Nieuw project aanmaken" Height="1000" Width="1500">
    <StackPanel Orientation="Horizontal">
        <Button Height="50" Width="100" Margin="5" VerticalAlignment="Top" Name="TerugButton" Content="Terug"/>
        <TabControl Grid.Column="1" Grid.Row="0" Margin="5" Name="NieuwProjectTabs">
            <TabItem Header="Algemene Info" IsSelected="True">
                <Grid Name="AlgemeneInfoGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="500"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="5" Name="TitelInputTextBox">Titel project</TextBox>
                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="5" Orientation="Vertical">
                        <CalendarButton Margin="5" Name="StartDatumCalendarButton">Startdatum</CalendarButton>
                        <ComboBox Margin="5">Status</ComboBox>
                        <ComboBox Margin="5"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="center">
                        <CheckBox>Stadsontwikkeling</CheckBox>
                        <CheckBox>Groene Ruimte</CheckBox>
                        <CheckBox>Innovatief Wonen</CheckBox>
                    </StackPanel>
                    <Grid Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3">
                        <TextBox Margin="5" Name="BeschrijvingTextBox">Beschrijving</TextBox>
                    </Grid>
                    <StackPanel Grid.Column="4" Grid.Row="3" Margin="5" Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                        <Button Name="VoegDocumentenToeButton" Content="Voeg documenten toe" Width="100"/>
                        <Button Name="VoegFotosToeButton" Content="Voeg foto's toe" Width="100"/>
                    </StackPanel>
                    <TextBox Grid.Column="1" Grid.Row="4" Margin="5" Name="NaamPartnerTextBox">Naam partner</TextBox>
                    <TextBox Grid.Column="1" Grid.Row="6" Margin="5" Name="ContactgegevensPartnerTextBox">Contactgegevens</TextBox>
                    <TextBox Grid.Column="1" Grid.Row="5" Margin="5" Name="">Partnerrol</TextBox>
                    <Button Grid.Column="3" Grid.Row="6" Margin="5" Name="VoegExtraParnterToeButton">Voeg nog een partner toe</Button>
                    
                </Grid>
            </TabItem>
            <TabItem Header="Specifieke Info Stadsontwikkeling">
                <Grid Name="infoStadsontwikkelingGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="1" Grid.Row="1" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Betrokken bouwfirma</TextBlock>
                    <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Name="BouwfirmaTextBox"/>
                    <TextBlock Grid.Column="1" Grid.Row="2" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Vergunningsstatus</TextBlock>
                    <ComboBox Grid.Column="2" Grid.Row="2" Margin="5" Name="VergunningsStatusComboBox"/>
                    <TextBlock Grid.Column="1" Grid.Row="3" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Architecturale Waarde</TextBlock>
                    <StackPanel Grid.Column="2" Grid.Row="3"  Orientation="Horizontal">
                    <RadioButton VerticalAlignment="center" Name="ArchitecturaleWaardeJaRadioButton" Content="ja"/>
                    <RadioButton Margin="5" VerticalAlignment="center" Name="ArchitecturaleWaardeNeeRadioButton" Content="nee"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Specifieke Info Groene ruimte"/>
            <TabItem Header="Specifieke Info Innovatief Wonen"/>
            <TabItem Header="Overzicht"/>
        </TabControl>
        <Button Margin="5" Width="150" Height="50" VerticalAlignment="Bottom" Name="GaVerderButton">Verder</Button>
    </StackPanel>
</Window>
