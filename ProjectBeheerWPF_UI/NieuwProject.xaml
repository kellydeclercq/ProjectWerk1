<Window x:Class="ProjectBeheerWPF_UI.NieuwProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectBeheerWPF_UI"
        mc:Ignorable="d"
        Title="Nieuw project aanmaken" Height="1000" Width="1500">
    <StackPanel Orientation="Horizontal">
        <Button Height="50" Width="100" Margin="5" VerticalAlignment="Top" Name="TerugButton" Content="Terug"/>
        <TabControl Grid.Column="1" Grid.Row="0" Margin="5" Name="NieuwProjectTabs">
            <TabItem Header="Algemene Info" IsSelected="True">
                <Grid Name="AlgemeneInfoGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="50.396"/>
                        <ColumnDefinition Width="199.604"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="500"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Margin="5,5,5,5" Name="TitelInputTextBox">Titel project</TextBox>
                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="5,5,5,5" Orientation="Vertical" Grid.ColumnSpan="2">
                        <CalendarButton Margin="5" Name="StartDatumCalendarButton">Startdatum</CalendarButton>
                        <ComboBox Margin="5">Status</ComboBox>
                        <ComboBox Margin="5"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3" Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <CheckBox>Stadsontwikkeling</CheckBox>
                        <CheckBox>Groene Ruimte</CheckBox>
                        <CheckBox>Innovatief Wonen</CheckBox>
                    </StackPanel>
                    <Grid Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4" Margin="0,0,0,50" Grid.RowSpan="2">
                        <TextBox Margin="5" Name="BeschrijvingTextBox">Beschrijving</TextBox>
                    </Grid>
                    <StackPanel Grid.Column="5" Grid.Row="3" Margin="0,455,0,0" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <Button Name="VoegDocumentenToeButton" Content="Voeg documenten toe" Width="100"/>
                        <Button Name="VoegFotosToeButton" Content="Voeg foto's toe" Width="100"/>
                    </StackPanel>
                    <TextBox Grid.Column="1" Grid.Row="4" Margin="5,5,5,5" Name="NaamPartnerTextBox" Grid.ColumnSpan="2">Naam partner</TextBox>
                    <TextBox Grid.Column="1" Grid.Row="6" Margin="5,5,5,5" Name="ContactgegevensPartnerTextBox" Grid.ColumnSpan="2">Contactgegevens</TextBox>
                    <TextBox Grid.Column="1" Grid.Row="5" Margin="5,5,5,5" Name="" Grid.ColumnSpan="2">Partnerrol</TextBox>
                    <Button Grid.Column="4" Grid.Row="6" Margin="5,5,5,5" Name="VoegExtraPartnerToeButton">Voeg nog een partner toe</Button>

                </Grid>
            </TabItem>
            <TabItem Header="Specifieke Info Stadsontwikkeling">
                <Grid Name="infoStadsontwikkelingGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="1" Grid.Row="1" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Betrokken bouwfirma</TextBlock>
                    <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Name="BouwfirmaTextBox"/>
                    <TextBlock Grid.Column="1" Grid.Row="2" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Contactgegevens bouwfirma</TextBlock>
                    <TextBox Grid.Column="2" Grid.Row="2" Margin="5" Name="GegevensBouwfirmaTextBox"/>
                    <TextBlock Grid.Column="1" Grid.Row="3" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Vergunningsstatus</TextBlock>
                    <ComboBox Grid.Column="2" Grid.Row="3" Margin="5" Name="VergunningsStatusComboBox"/>
                    <TextBlock Grid.Column="1" Grid.Row="4" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Architecturale Waarde</TextBlock>
                    <StackPanel Grid.Column="2" Grid.Row="4"  Orientation="Horizontal">
                        <RadioButton Margin="10" VerticalAlignment="center" Name="ArchitecturaleWaardeJaRadioButton" Content="ja"/>
                        <RadioButton Margin="10" VerticalAlignment="center" Name="ArchitecturaleWaardeNeeRadioButton" Content="nee"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Grid.Row="5" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Publieke toegankelijkheid</TextBlock>
                    <ComboBox Grid.Column="2" Grid.Row="5" Margin="5" Name="ToegankelijkheidComboBox"/>
                    <TextBlock Grid.Column="1" Grid.Row="6" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Toeristische bezienswaardigheid</TextBlock>
                    <StackPanel Grid.Column="2" Grid.Row="6" Orientation="Horizontal">
                        <RadioButton Margin="10" VerticalAlignment="center" Name="ToeristischeBezienswaardigheidJaRadioButton" Content="ja"/>
                        <RadioButton Margin="10" VerticalAlignment="center" Name="ToeristischeBezienswaardigheidNeeRadioButton" Content="nee"/>
                    </StackPanel>
                    <!-- de opties hieronder mogen alleen gepresenteerd worden als de ToeristischeBezienswaardigheidJaRadioButton "ja" is aangeduid -->
                    <StackPanel Grid.Column="2" Grid.Row="7" Orientation="Vertical">
                        <CheckBox Content="Uitlegbord"/>
                        <CheckBox Content="Infowandeling"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Specifieke Info Groene ruimte">
                <Grid Name="InfoGroeneRuimteGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="1" Grid.Row="1" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Oppervlakte in m²</TextBlock>
                    <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Name="OppervlakteTextBox"/>
                    <TextBlock Grid.Column="1" Grid.Row="2" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Biodiversiteitscore</TextBlock>
                    <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Margin="5" VerticalAlignment="Center">1</TextBlock>
                        <Slider Name="BiodiversiteitSlider" Margin="5" Width="150" VerticalAlignment="Center" Value="1" Minimum="1" Maximum="10" TickFrequency="10" 
                                IsSnapToTickEnabled="True"/>
                        <TextBlock Margin="5" VerticalAlignment="Center">10</TextBlock>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Grid.Row="3" Margin="5" HorizontalAlignment="Right" VerticalAlignment="center">Aantal wandelpaden</TextBlock>
                    <TextBox Grid.Column="2" Grid.Row="3" Margin="5" Name="AantalWandelpadenTextBox"/>
                    <TextBlock Grid.Column="1" Grid.Row="4" Margin="10" HorizontalAlignment="Right" VerticalAlignment="top">Beschikbare faciliteiten</TextBlock>
                    <StackPanel Grid.Column="2" Grid.Row="4" Margin="5" Orientation="Vertical">
                        <CheckBox Margin="5" Name="SpeeltuinFaciliteitCheckBox">Speeltuin</CheckBox>
                        <CheckBox Margin="5" Name="PicknickZoneFaciliteitCheckBox">Picknickzone</CheckBox>
                        <CheckBox Margin="5" Name="InfobordenFaciliteitCheckBox">Infoborden</CheckBox>
                        <CheckBox Margin="5" Name="AndereFaciliteitCheckBox">Andere :</CheckBox>
                        <TextBox Margin="5" Name="AndereFaciliteitTextBox"></TextBox>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Grid.Row="5" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">
                        Wordt het project opgenomen in toeristische wandelroutes?</TextBlock>
                    <StackPanel Grid.Column="2" Grid.Row="5" Orientation="Horizontal">
                        <RadioButton Margin="10" VerticalAlignment="center" Name="ToeristischeWandelroutesJaRadioButton" Content="ja"/>
                        <RadioButton Margin="10" VerticalAlignment="center" Name="ToeristischeWandelroutesNeeRadioButton" Content="nee"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Grid.Row="6" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center">
                        Beoordeling door bezoekers</TextBlock>
                    <StackPanel Grid.Column="2" Grid.Row="6" Orientation="Horizontal">
                        <TextBlock Margin="5" VerticalAlignment="Center">0</TextBlock>
                        <Slider Name="BezoekersBeoordelingSlider" Margin="5" Width="150" VerticalAlignment="Center" 
                                Value="0" Minimum="0" Maximum="5" TickFrequency="5" IsSnapToTickEnabled="True"/>
                        <TextBlock Margin="5" VerticalAlignment="Center">5</TextBlock>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Specifieke Info Innovatief Wonen"/>
            <TabItem Header="Overzicht"/>
        </TabControl>
        <Button Margin="5" Width="150" Height="50" VerticalAlignment="Bottom" Name="GaVerderButton">Verder</Button>
    </StackPanel>
</Window>
