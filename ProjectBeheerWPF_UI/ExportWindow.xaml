<Window x:Class="ProjectBeheerWPF_UI.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectBeheerWPF_UI"
        mc:Ignorable="d"
        Title="ExportWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" Text="Geselecteerde projecten" VerticalAlignment="Bottom"></TextBlock>
        <!--listbox dynamisch invullen met Titel + Eigenaarx²-->
        <ListBox  Grid.Row="1" Grid.Column="1" Margin="5" Grid.ColumnSpan="2" Name="ListBoxExperts" />
        <Button Grid.Row="2" Grid.Column="1" Margin="5" Name="BladerenButton" Content="Bladeren..." Click="BladerenButton_Click"/>
        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button  Margin="5" Name="ExporteerAlsCSV" Content="Exporteer als CSV" Click="ExporteerAlsCSVButton_Click"/>
            <Button  Margin="5" Name="ExporteerAlsPDF" Content="Exporteer als PDF" Click="ExporteerAlsPDFButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
